{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch - C++",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.exe", // Replace with the actual path to your compiled C++ program
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(gdb) Attach - C++",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/a.exe", // Replace with the actual path to your compiled C++ program
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/gdb", // Replace with the actual path to your GDB executable
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Windows) Attach - C++",
            "type": "cppvsdbg",
            "request": "attach",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node.js Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}
