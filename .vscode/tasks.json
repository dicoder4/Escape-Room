{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-run-c-programs",
            "type": "shell",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "$(foreach ($file in Get-ChildItem -Path ${workspaceFolder}\\msritf\\*.c) { $file.FullName })",
                "-o",
                "${workspaceFolder}\\msritf\\output\\output.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
